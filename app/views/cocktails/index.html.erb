<h1>Cocktails</h1>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li>
    <%= link_to cocktail.name, cocktail_path(cocktail) %> 
    <%= link_to ' -- Remove', cocktail_path(cocktail), method: :delete, 
     data: { confirm: 'Are you sure?'} %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create a new cocktail', new_cocktail_path, class: 'btn btn-primary' %>