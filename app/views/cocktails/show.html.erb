<h1><%= @cocktail.name %></h1>

<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <p>No photo yet</p>
<% end %>

<h2>Ingredients</h2>
<%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
<ul>
  <% @doses.each do |dose| %>
    <li>
    <%= dose.description %> of 
    <%= dose.ingredient.name %> -- 
    <%= link_to 'Destroy', dose_path(dose), 
    method: :delete, 
    data: { confirm: 'Are you sure?'} %>
    </li>
  <% end %>
</ul>

<h2>Reviews</h2>
<%= link_to 'Add a review', new_cocktail_review_path(@cocktail), class: 'btn btn-secondary' %>
<ul>
  <% @cocktail.reviews.each do |review| %>
    <%= review.name %>
    <%= review.content %>
    <%= review.rating %>
  <% end %>
</ul>

<%= link_to 'Back to list', cocktails_path, class: 'btn btn-danger' %>


<p id='notice'><%= notice %></p>


