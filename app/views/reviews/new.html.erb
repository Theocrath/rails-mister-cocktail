<%= simple_form_for [@cocktail, @review] do |f| %>
<div class='form-inputs'>
  <%= f.input :name %>
  <%= f.input :content %>
  <%= f.input :rating, as: :radio_buttons, collection: 0..5 %>
  <%= f.submit class: 'btn btn-primary' %>
  <%= link_to "Back to #{@cocktail.name}", cocktail_path(@cocktail), class: 'btn btn-danger' %>
</div>
<% end %>
